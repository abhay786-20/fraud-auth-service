# ===========================================
# Fraud Auth Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Server Config (Optional - has defaults)
# -----------------
AUTH_SERVER_HOST=0.0.0.0
AUTH_SERVER_PORT=8081

# -----------------
# Database Config (REQUIRED)
# -----------------
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_USER=your_db_user
AUTH_DB_PASSWORD=your_db_password
AUTH_DB_NAME=your_db_name

# Database Pool Settings (Optional - has defaults)
# AUTH_DB_MAX_OPEN_CONNS=25
# AUTH_DB_MAX_IDLE_CONNS=25
# AUTH_DB_MAX_LIFETIME_MIN=5

# -----------------
# Auth Config (REQUIRED)
# -----------------
AUTH_JWT_SECRET=your_jwt_secret_key_min_32_chars

# Optional - defaults to 24 hours
# AUTH_JWT_TTL_HOURS=24
